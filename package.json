{
  "name": "tales",
  "version": "0.1.2",
  "description": "synyx presentation style for everyone",
  "main": "src/js/index.js",
  "browser": "resources/public/js/tales.js",
  "scripts": {
    "build": "rollup -c",
    "format": "prettier --write 'src/js/**/*.js'",
    "lint": "eslint src/js",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm test && npm run lint",
    "test": "jest",
    "watch": "rollup -c -w"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:synyx/tales.git"
  },
  "keywords": [
    "poster",
    "presentation",
    "presentation-tools",
    "svg"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/synyx/tales/issues"
  },
  "homepage": "https://github.com/synyx/tales#readme",
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-jest": "^22.6.4",
    "eslint-plugin-prettier": "^3.1.0",
    "flyps": "^0.4.0",
    "flyps-dom-snabbdom": "^0.1.1",
    "jest": "^24.8.0",
    "prettier": "^1.18.0",
    "rollup": "^1.14.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/js/**/*.js",
      "!src/js/**/*.test.js"
    ],
    "coverageDirectory": "<rootDir>/coverage",
    "roots": [
      "<rootDir>/src/js"
    ]
  }
}
